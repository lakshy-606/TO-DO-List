<%- include("header") -%>

<div class="box" id="heading">
    <h1><%=kindofDay%></h1>
</div>

<div class="box">

    <% Newli.forEach(function(items){ %>
        <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" name="checkbox" value="<%=items._id %>" onchange="this.form.submit()" >
                <p><%=items.name%></p>
            </div>
            <input type="hidden" name="list" value="<%=kindofDay%>" ></input>
        </form>
    <% }) %>

    <form class="newitem" action="/" method="post">
        <input type="text" name="newitem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="add" value=<%=kindofDay%> >Add</button>
    </form>
</div>
       
<%- include("footer") -%>
    
    

